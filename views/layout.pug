    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script. 
      function goHome() {
        window.location.href = "/"
      }

      function goLogin() {
        window.location.href = "/login"
      }

      function goRegister() {
        window.location.href = "/register"
      }

      function goRegister() {
        window.location.href = "/register"
      }

      function goLogout() {
        window.location.href = "/logout"
      }

      function goFolders() {
        window.location.href = "/newfolder"
      }

      function goNewFile() {
        window.location.href = "/newfile"
      }

      function goAllFiles() {
        window.location.href = "/allfiles"
      }

      

    div.headerContent
      h1 Image Sharing 
      div.navBar 
        if user
          button.navBtn(onclick="goHome()") Home
          button.navBtn(onclick="goAllFiles()") Show files
          button.navBtn(onclick="goFolders()") New Folder
          button.navBtn(onclick="goNewFile()") New File
          button.navBtn(onclick="goLogout()") Logout
        else 
          button.navBtn(onclick="goHome()") Home
          button.navBtn(onclick="goLogin()") Login
          button.navBtn(onclick="goRegister()") Register

